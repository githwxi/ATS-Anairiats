(* ****** ****** *)

implement main () = let
  stavar n: int
  val n: size_t n = string1_length (theInput)
  fun loop {i:nat | i <= n} .<n-i>.
    (i: size_t i, max: &int):<cloref1> void =
    if i + 5 <= n then let
      val c0 = theInput[i+0] - '0'
      val c1 = theInput[i+1] - '0'
      val c2 = theInput[i+2] - '0'
      val c3 = theInput[i+3] - '0'
      val c4 = theInput[i+4] - '0'
      val p = c0 * c1 * c2 * c3 * c4
      val () = if p > max then max := p else ()
    in
      loop (i+1, max)
    end // end of [if]
  // end of [loop]
  var max: int = 0
  val () = loop (0, max)
  val ans = max
  val () = assert_errmsg (ans = 40824, #LOCATION)
in
  print "ans = "; print ans; print_newline ()
end // end of [main]

